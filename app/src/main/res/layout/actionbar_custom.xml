<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/backCustom"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:visibility="invisible"
        android:src="@drawable/ic_back_app_custom"
        app:layout_constraintBottom_toBottomOf="@+id/frameCustom"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/frameCustom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frameCustom" />

    <FrameLayout
        android:id="@+id/frameCustom"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bg_txt_app_custom"
        app:layout_constraintDimensionRatio="1.64:0.52"
        app:layout_constraintEnd_toStartOf="@+id/save"
        app:layout_constraintStart_toEndOf="@+id/backCustom"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/single_marquee"
            android:id="@+id/txtCustom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/cherry_bomb_regular"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/language"
            android:textSize="22sp"
            />
    </FrameLayout>

    <ImageView
        android:id="@+id/save"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:visibility="invisible"

        android:src="@drawable/ic_save_app_custom"
        app:layout_constraintBottom_toBottomOf="@+id/frameCustom"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frameCustom"
        app:layout_constraintTop_toTopOf="@+id/frameCustom" />
</androidx.constraintlayout.widget.ConstraintLayout>